<?xml version='1.0' encoding='utf-8'?>
<widget id="com.churchadminplugin.wpchurch" version="2.81" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WP Church</name>
    <description>
        An app for local churches that use Wordpress and the Church Admin Plugin.
    </description>
    <author email="support@churchadminplugin.com" href="http://www.churchadminplugin.com">
        Andy Moyle
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="ldpi" src="res/android/ldpi.png" />
    <icon density="mdpi" platform="android" src="res/android/mdpi.png" />
    <icon density="hdpi" platform="android" src="res/android/hdpi.png" />
    <icon density="xhdpi" platform="android" src="res/android/xhdpi.png" />
    <icon density="xxhdpi" platform="android" src="res/android/xxhdpi.png" />
    <icon density="xxxhdpi" platform="android" src="res/android/xxxhdpi.png" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#E9E9E9" />
    <preference name="StatusBarStyle" value="darkcontent" />
    <preference name="FadeSplashScreenDuration" value="2000" />
    <preference name="BackupWebStorage" value="local" />
</widget>
